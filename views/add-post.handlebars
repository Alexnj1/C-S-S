<body class="image-five">
  <div class="welcome-message">
    <h2 class="text-center my-3">NEW POST</h2>

    <input type="text" id="new-title" class="form-control w-50 mx-auto" placeholder="Post Title..." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    
    <div class="text-center mt-3">
      <label for="exampleDataList " class="form-label mx-auto">Choose a Category</label>
    </div>

    <input class="form-control w-50 mx-auto" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
    <datalist id="datalistOptions">
      <option value="1- News">
      <option value="2- Community">
      <option value="3- Events">
    </datalist>    

    <div class="form-floating w-50 my-5 mx-auto">
      <textarea class="form-control " placeholder="Leave a comment here" id="new-post-body" style="height: 100px"></textarea>
      <label class="text-muted" for="new-post-body">Post Body...</label>
    </div>



    <div class="text-center">
      <button class="btn btn-small mx-4 my-3 btn-info fw-bold" id="submit-post-btn">SUBMIT!</button>  
    </div>
  </div>  
</body>

<script src="/js/new-post.js"></script>


