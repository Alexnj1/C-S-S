<body class="image-five image-options">
  <div class="welcome-message">
    <h2 class="text-center my-3 fw-bold text-light">NEW POST</h2>

    <input type="text" id="new-title" class="form-control mx-auto n-title" placeholder="Post Title..." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    
    <div class="text-center mt-3">
      <label for="exampleDataList " class="form-label mx-auto text-light">Choose a Category</label>
    </div>

    <input class="form-control mx-auto n-post-cat" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
    <datalist id="datalistOptions">
      <option value="1- News">
      <option value="2- Community">
      <option value="3- Events">
    </datalist>    

    <div class="text-center mb-0 mt-3 d-none d-md-block">
      <label class="form-label text-light mx-auto" for="new-post-body">Post Body</label>
    </div>
    
    <div class="form-floating my-3 mx-auto">
      <textarea class="form-control n-body mx-auto" placeholder="Post Body" id="new-post-body" style="height: 100px"></textarea>
      <label class="text-muted d-md-none mx-auto" for="new-body">Post Body...</label>
    </div>



    <div class="text-center">
      <button class="btn btn-small mx-4 my-3 btn-info fw-bold" id="submit-post-btn">SUBMIT!</button>  
    </div>
  </div>  
</body>

<script src="/js/new-post.js"></script>


